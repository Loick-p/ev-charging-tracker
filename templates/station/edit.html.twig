{% extends 'layouts/base.html.twig' %}

{% block title %}Edit {{ station.name }}{% endblock %}

{% block body %}
    <a href="{{ path('station.index') }}" class="text-sm text-gray-500 hover:text-blue-500">
        <i class="fa-solid fa-arrow-left"></i>
        Back
    </a>

    <div class="flex flex-col items-center justify-center">
        <h1 class="text-2xl font-semibold mb-4">Edit station</h1>
        <div class="w-full max-w-xl p-4 bg-white border border-gray-200 rounded-lg shadow-sm sm:p-6 md:p-8">
            {{ form_start(form) }}
                <div class="mb-4">
                    <div class="flex gap-1">
                        {{ form_label(form.name, 'Name', {
                            'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900'}
                        }) }}
                        <span class="text-red-500">*</span>
                    </div>

                    {{ form_widget(form.name, {
                        'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5',
                            'placeholder': 'Tesla Supercharger'
                        }
                    }) }}

                    {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="mb-4">
                    <div class="flex gap-1">
                        {{ form_label(form.outputPower, 'Power output', {
                            'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900'}
                        }) }}
                        <span class="text-red-500">*</span>
                    </div>

                    {{ form_widget(form.outputPower, {
                        'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5',
                            'placeholder': '300 kW'
                        }
                    }) }}

                    {{ form_errors(form.outputPower, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="mb-4">
                    <div class="flex gap-1">
                        {{ form_label(form.electricityPrice, 'Electricity price', {
                            'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900'}
                        }) }}
                        <span class="text-red-500">*</span>
                    </div>

                    {{ form_widget(form.electricityPrice, {
                        'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5',
                            'placeholder': '0.3 â‚¬/kWh'
                        }
                    }) }}

                    {{ form_errors(form.electricityPrice, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <button type="submit" class="w-full mb-2 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5">
                    Save
                </button>
            {{ form_end(form) }}

            <button data-modal-target="delete-modal" data-modal-toggle="delete-modal" class="w-full text-white bg-red-500 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5" type="button">
                Delete
            </button>
        </div>
    </div>

    <div id="delete-modal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative p-4 w-full max-w-md max-h-full">
            <div class="relative bg-white rounded-lg shadow-sm">
                <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="delete-modal">
                    <i class="fa-solid fa-xmark"></i>
                    <span class="sr-only">Close modal</span>
                </button>
                <div class="p-4 md:p-5 text-center">
                    <i class="fa-solid fa-circle-exclamation text-gray-400 text-6xl mb-2"></i>

                    <h3 class="mb-5 text-lg font-normal text-gray-500">Are you sure you want to delete this station ?</h3>

                    <div class="flex justify-center">
                        <form method="post" action="{{ path('station.remove', {id: station.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('remove_station_' ~ station.id) }}">
                            <button type="submit" class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center">
                                Yes, I'm sure
                            </button>
                        </form>

                        <button data-modal-hide="delete-modal" type="button" class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100">
                            No, cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
