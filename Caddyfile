{
    frankenphp
    order php_server before file_server
}

:80 {
    root * /app/public

    php_server {
        index index.php
    }

    file_server

    @symfony {
        not path /bundles/*
        file {
            try_files {path} {path}/ /index.php?{query}
        }
    }

    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
    }

    log {
        output stdout
        level DEBUG
    }
}
