{% extends 'layouts/auth.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <h1 class="text-xl font-bold text-gray-900 md:text-2xl">
                Register
            </h1>

            {{ form_start(registrationForm) }}
                <div class="space-y-4 md:space-y-6">
                    <div>
                        <div class="flex gap-1">
                            <label for="registration_form_email" class="block mb-2 text-sm font-medium text-gray-900">
                                Email
                            </label>
                            <span class="text-red-500">*</span>
                        </div>
                        {{ form_widget(registrationForm.email, {
                            attr: {
                                class: 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 mb-1',
                                placeholder: 'email@mail.com'
                            }
                        }) }}
                        <span class="text-red-500 text-sm">
                            {{ form_errors(registrationForm.email) }}
                        </span>
                    </div>

                    <div>
                        <div class="flex gap-1">
                            <label for="registration_form_plainPassword" class="block mb-2 text-sm font-medium text-gray-900">
                                Password
                            </label>
                            <span class="text-red-500">*</span>
                        </div>
                        {{ form_widget(registrationForm.plainPassword, {
                            attr: {
                                class: 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 mb-1',
                                placeholder: '••••••••'
                            }
                        }) }}
                        <span class="text-red-500 text-sm">
                            {{ form_errors(registrationForm.plainPassword) }}
                        </span>
                    </div>

                    <button type="submit" class="w-full text-white bg-blue-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                        Register
                    </button>

                    <p class="text-sm font-light text-gray-500">
                        Already have an account ?
                        <a href="{{ path('app_login') }}" class="font-medium text-primary-600 hover:underline">
                            Sign in
                        </a>
                    </p>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
