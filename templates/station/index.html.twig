{% extends 'layouts/base.html.twig' %}

{% block title %}My stations{% endblock %}

{% block body %}
    <div class="rounded-lg border border-gray-200 bg-white p-4 md:p-8">
        <div class="flex justify-between items-center mb-4">
            <h3 class="mb-4 text-xl font-semibold">My stations</h3>

            <a href="{{ path('station.create') }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 ">
                <i class="fa-solid fa-plus"></i>
                Add station
            </a>
        </div>

        {% if stations is empty %}
            <p class="text-center text-sm italic text-gray-500">No stations</p>
        {% else %}
            <div class="relative overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                Name
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Output power
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Electricity price
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for station in stations %}
                            <tr class="bg-white border-b border-gray-200">
                                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                                    {{ station.name }}
                                </th>
                                <td class="px-6 py-4">
                                    {{ station.outputPower }} kW
                                </td>
                                <td class="px-6 py-4">
                                    {{ station.electricityPrice }} â‚¬/kWh
                                </td>
                                <td class="px-6 py-4">
                                    <a href="{{ path('station.edit', {id: station.id}) }}" class="text-gray-900 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm px-4 py-2">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}
